b = bar(y2, 'FaceColor', 'flat');
figure(2)
for i = 1:length(y2)
    b(i) = bar(xs(i), y2(i));
    set(b(i), 'FaceColor', barcmap(i,:));
    hold on
end
title('Results: Training and Testing on Each Dataset', 'FontSize', 50);
xlabel('Image Mutation', 'FontSize', 40);
ylabel('Accuracy', 'FontSize', 40);
set(gca, 'XTick', xs);
